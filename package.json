{
  "name": "vexcore",
  "private": true,
  "version": "1.1.14",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "dev:vite": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "build:portable": "vite build && electron-builder --win portable",
    "build:installer": "vite build && electron-builder --win nsis"
  },
  "build": {
    "appId": "com.vexcore.app",
    "productName": "VexCORE",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "dvo916-source",
        "repo": "autocrminstall",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "shortcutName": "VexCORE",
      "artifactName": "VexCORE_Setup_${version}.exe",
      "perMachine": true,
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "VexCORE_Portable.exe"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "icon.png",
      ".env"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.26.2",
    "idb-keyval": "^6.2.2",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.5",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.23",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4"
  }
}